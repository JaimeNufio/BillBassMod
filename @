import RPi.GPIO as io;

"""
Easier Ussage of these basic ideas for me.
"""


def initMotor(motorset):
    io.setmode(io.BCM)
    for motor in motorset:
        for out in motor:
            io.setup(out,io.OUT)#initialize
            io.output(out,0) #turn off
    print("motors Init'd")
	
def motorForward(motor):
    io.output(motor[0],0)
    io.output(motor[1],1)

def motorBackward(motor):
    io.output(motor[0],0)
    io.output(motor[1],1)

def motorOff(motor):
    for out in motor:
        io.output(out,0)

def end(motors):
    for motor in motors:
        motorOff(motor)
    io.cleanup()
